<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    tools:context=".admin.admin_micuenta">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:elevation="10dp"
        app:cardCornerRadius="8dp">

        <ImageView
            android:id="@+id/uti_micuenta_imagen"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/white"
            android:scaleType="centerCrop"
            android:src="@drawable/imagen_usuario_predefinida" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView1_uti_micuenta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="64dp"
            android:layout_marginTop="276dp"
            android:text="nombres"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/admin_micuenta_nombre"
            android:layout_width="288dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="64dp"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/textView2_uti_micuenta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="64dp"
            android:layout_marginTop="16dp"
            android:text="email"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/admin_micuenta_email"
            android:layout_width="288dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="64dp"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/textView3_uti_micuenta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="64dp"
            android:layout_marginTop="16dp"
            android:text="celular"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/admin_micuenta_celular"
            android:layout_width="288dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="64dp"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/textView4_uti_micuenta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="64dp"
            android:layout_marginTop="16dp"
            android:text="dni"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/admin_micuenta_dni"
            android:layout_width="288dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="64dp"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/textView7_uti_micuenta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="64dp"
            android:layout_marginTop="16dp"
            android:text="privilegio"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/uti_micuenta_privilegio"
            android:layout_width="288dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="64dp"
            android:layout_marginTop="4dp"
            android:text="Admin" />

        <Button
            android:id="@+id/admin_micuenta_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="32dp"
            android:text="Cerrar sesiÃ³n" />
    </LinearLayout>

</FrameLayout>